<div class="min-vh-100 d-flex flex-column"
     style="background: linear-gradient(135deg, #f8f9fa, #e6f4ea);">

  <!-- Header -->
  <header class="py-3 text-center shadow-sm bg-white">
    <h1 class="h5 fw-semibold text-success m-0">
      Portal Cubi Medições
    </h1>
  </header>

  <!-- Conteúdo -->
  <main class="flex-fill d-flex align-items-center justify-content-center p-3">

    <form
      action="/api/validar"
      method="POST"
      class="bg-white rounded-4 shadow-lg p-4 p-md-5"
      style="max-width: 420px; width: 100%;">

      <!-- Logo / Título -->
      <div class="text-center mb-4">
        <img
          src="/logo192.png"
          alt="Logo"
          class="mb-3 opacity-75"
          width="80">

        <h2 class="fw-bold mb-1">Acesse sua conta</h2>
        <p class="text-muted small">
          Faça login para continuar
        </p>
      </div>

      <!-- Usuário -->
      <div class="mb-3">
        <label class="form-label fw-semibold">
          email
        </label>
        <input
          type="text"
          name="email"
          class="form-control form-control-lg"
          placeholder="Digite seu usuário"
          required
        />
      </div>

      <!-- Senha -->
      <div class="mb-3">
        <label class="form-label fw-semibold">
          Senha
        </label>
        <input
          type="password"
          name="password"
          class="form-control form-control-lg"
          placeholder="Digite sua senha"
          required
        />
      </div>

      <!-- Tipo de Conta -->
      <div class="mb-4">
        <label class="form-label fw-semibold">
          Tipo de Conta
        </label>
        <select
          name="type"
          class="form-select form-select-lg"
          required>
          <option value="" disabled selected>
            Selecione o tipo de conta
          </option>
          <option value="EMPRESA">Loja</option>
          <option value="MEDIDOR">Medidor</option>
          <option value="ADMIN">Administrativo</option>
        </select>
      </div>

      <!-- Botão -->
      <button
        type="submit"
        class="btn btn-success btn-lg w-100 shadow-sm">
        Entrar
      </button>

      <!-- Criar conta -->
      <a
        href="/cadastro"
        class="d-block text-center text-success mt-4 fw-medium text-decoration-none">
        Criar nova conta
      </a>

      <!-- Mensagem de erro -->
      {{#if error}}
        <div class="alert alert-danger text-center mt-3">
          {{error}}
        </div>
      {{/if}}

    </form>

  </main>

  <!-- Footer -->
  <footer class="text-center py-4 text-muted small">
    &copy; 2025 Sistema de Agendamento. Todos os direitos reservados.
  </footer>

</div>
